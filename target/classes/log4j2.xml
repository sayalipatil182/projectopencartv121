<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Define properties -->
    <Properties>
        <Property name="basePath">./logs</Property>
    </Properties>

    <!-- Define appenders -->
    <Appenders>
        <!-- Console appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%t] %c{1} - %msg%n"/>
        </Console>

        <!-- Rolling file appender -->
        <RollingFile name="File" 
                     fileName="${basePath}/automation.log"
                     filePattern="${basePath}/automation-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- Roll file daily or if it exceeds 10 MB -->
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <!-- Define loggers -->
    <Loggers>
        
        <!-- Root logger -->
        <Root level="info">
         <!--     <AppenderRef ref="Console"/> -->
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
